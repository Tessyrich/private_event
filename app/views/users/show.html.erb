<h2>Events Created</h2>
<ul>
  <% @user.created_events.each do |event| %>
    <li><%= link_to event.title, event %></li>
  <% end %>
</ul>

<h2>Upcoming Events Attending</h2>
<% @user.attended_events.select { |e| e.date >= Time.now }.each do |event| %>
  <li><%= link_to event.title, event %></li>
<% end %>

<h2>Past Events Attended</h2>
<% @user.attended_events.select { |e| e.date < Time.now }.each do |event| %>
  <li><%= link_to event.title, event %></li>
<% end %>
